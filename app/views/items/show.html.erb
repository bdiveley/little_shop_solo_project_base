<p>
  <strong>Name:</strong>
  <%= @item.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @item.description %>
</p>

<p>
  <strong>Image:</strong>
  <img id="item-image-<%= @item.id %>" alt="image for <%= @item.name %>" src="<%= @item.image %>" />
</p>

<p>
  <strong>Merchant:</strong>
  <%= @item.user.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@item.price) %>
</p>

<p>
  <% if @item.discount %>
  This item is discounted 5% if you purchase at least 10 items and 10% discounted if you purchase 20 or more!</div>
  <% end %>
</p>

  <strong>Inventory:</strong>
  <%= @item.inventory %>
</p>

<%= button_to 'Add to Cart', cart_item_quantity_path(item_id: @item.id), method: :patch, params: {quantity: :more} %>

<% if current_admin? %>
  <%= link_to 'Edit', edit_admin_item_path(@item) %>
<% elsif current_user == @item.user  %>
  <%= link_to 'Edit', edit_merchant_item_path(@item.user, @item) %>
<% end %>
<%= link_to 'Back', items_path %>
